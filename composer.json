{
    "name": "kojiro526/php-dbdoc",
    "description": "Generate database documents.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "kojiro",
            "email": "kojiro@ryusei-sha.com"
        }
    ],
    "require": {
        "php" : ">=7.1.0",
        "pear/console_commandline": "^1.2",
        "doctrine/dbal": "^2.8"
    },
    "autoload" : {
        "psr-4" : {
            "PhpDbdoc\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "PhpDbdoc\\Test\\" : "tests/"
        }
    },
    "scripts" : {
        "test" : "./vendor/bin/phpunit --colors=always ./tests"
    },
    "bin" : [
        "bin/dbdoc-php"
    ],
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    }
}
